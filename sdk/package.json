{
  "name": "@visitor-analytics/sdk",
  "version": "0.1.0",
  "description": "Web SDK for tracking visitor page history and analyzing customer interests",
  "module": "dist/index.js",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "bun build ./index.ts --outdir ./dist --target browser --format esm --minify && bun run build:types",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "dev": "bun build ./index.ts --outdir ./dist --target browser --format esm --watch",
    "typecheck": "tsc --noEmit"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "analytics",
    "tracking",
    "page-views",
    "visitor-tracking",
    "visitor-analytics"
  ],
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "dexie": "^4.2.1"
  }
}
