---
import Layout from '../layouts/Layout.astro';
import { products } from '../data/products';
---

<Layout title="Products - ShopDemo" description="Discover our amazing collection of high-quality products">
  <style>
    .hero {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 4rem 2rem;
      text-align: center;
    }
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 4rem 2rem;
    }
    .products {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 2rem;
      margin-top: 2rem;
    }
    .product {
      background: white;
      border-radius: 10px;
      padding: 2rem;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      transition: all 0.3s;
      text-decoration: none;
      color: inherit;
      display: block;
    }
    .product:hover {
      transform: translateY(-5px);
      box-shadow: 0 8px 12px rgba(0, 0, 0, 0.15);
    }
    .product h3 {
      color: #667eea;
      margin-bottom: 0.5rem;
      font-size: 1.25rem;
    }
    .price {
      font-size: 1.75rem;
      font-weight: bold;
      color: #2d3748;
      margin: 1rem 0;
    }
    .category {
      display: inline-block;
      padding: 0.25rem 0.75rem;
      background: #e6fffa;
      color: #234e52;
      border-radius: 20px;
      font-size: 0.875rem;
      margin-bottom: 1rem;
    }
    .description {
      color: #4a5568;
      line-height: 1.6;
      margin-top: 1rem;
      font-size: 0.95rem;
    }
    .view-details {
      display: inline-block;
      margin-top: 1rem;
      color: #667eea;
      font-weight: 600;
      font-size: 0.95rem;
    }
    .view-details::after {
      content: " â†’";
    }
  </style>

  <div class="hero">
    <h1>Our Products</h1>
    <p>Discover our amazing collection of high-quality products</p>
  </div>

  <div class="container">
    <h2>Featured Products</h2>
    <div class="products">
      {products.map((product) => (
        <a href={`/products/${product.id}`} class="product">
          <span class="category">{product.category}</span>
          <h3>{product.name}</h3>
          <p class="price">${product.price}</p>
          <p class="description">{product.description.substring(0, 120)}...</p>
          <span class="view-details">View Details</span>
        </a>
      ))}
    </div>
  </div>
</Layout>
