---
import Layout from '../../layouts/Layout.astro';
import { caseStudies } from '../../data/case-studies';

export function getStaticPaths() {
  return caseStudies.map((study) => ({
    params: { id: study.id },
    props: { study },
  }));
}

const { study } = Astro.props;
---

<Layout title={`${study.company} Case Study - ShopDemo`} description={study.description}>
  <style>
    .hero {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 4rem 2rem;
    }
    .container {
      max-width: 900px;
      margin: 0 auto;
      padding: 4rem 2rem;
    }
    .back-link {
      display: inline-block;
      margin-bottom: 2rem;
      color: white;
      text-decoration: none;
      font-weight: 500;
    }
    .back-link:hover {
      text-decoration: underline;
    }
    .hero h1 {
      font-size: 3rem;
      margin-bottom: 1rem;
    }
    .industry {
      display: inline-block;
      padding: 0.5rem 1rem;
      background: rgba(255, 255, 255, 0.2);
      border-radius: 20px;
      font-size: 0.875rem;
      margin-bottom: 1rem;
    }
    .result-highlight {
      font-size: 1.5rem;
      font-weight: bold;
      margin-top: 1rem;
    }
    .section {
      margin-bottom: 4rem;
    }
    .section h2 {
      font-size: 2rem;
      color: #2d3748;
      margin-bottom: 1.5rem;
      padding-bottom: 0.5rem;
      border-bottom: 3px solid #667eea;
    }
    .section-content {
      font-size: 1.125rem;
      line-height: 1.8;
      color: #4a5568;
    }
    .impact-list {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 1.5rem;
      margin-top: 1.5rem;
    }
    .impact-item {
      padding: 1.5rem;
      background: white;
      border-radius: 10px;
      box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      border-left: 4px solid #667eea;
      display: flex;
      align-items: center;
    }
    .impact-item::before {
      content: "✓";
      color: #667eea;
      font-weight: bold;
      font-size: 1.5rem;
      margin-right: 0.75rem;
    }
    .testimonial {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 3rem;
      border-radius: 20px;
      margin-top: 2rem;
      position: relative;
    }
    .testimonial::before {
      content: "\201C";
      font-size: 6rem;
      position: absolute;
      top: -1rem;
      left: 2rem;
      opacity: 0.3;
    }
    .quote {
      font-size: 1.25rem;
      line-height: 1.8;
      font-style: italic;
      margin-bottom: 1.5rem;
      position: relative;
    }
    .author {
      font-weight: bold;
      font-size: 1.125rem;
    }
    .position {
      opacity: 0.9;
      margin-top: 0.25rem;
    }
    .cta {
      text-align: center;
      padding: 4rem 2rem;
      background: #f7fafc;
      border-radius: 20px;
      margin-top: 4rem;
    }
    .cta h2 {
      font-size: 2rem;
      color: #2d3748;
      margin-bottom: 1rem;
    }
    .cta-button {
      display: inline-block;
      margin-top: 1.5rem;
      padding: 1rem 2.5rem;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      text-decoration: none;
      border-radius: 50px;
      font-weight: bold;
      font-size: 1.125rem;
      transition: transform 0.3s;
    }
    .cta-button:hover {
      transform: translateY(-2px);
    }
  </style>

  <div class="hero">
    <div class="container">
      <a href="/case-studies" class="back-link">← Back to Case Studies</a>
      <span class="industry">{study.industry}</span>
      <h1>{study.company}</h1>
      <p class="result-highlight">{study.result}</p>
    </div>
  </div>

  <div class="container">
    <div class="section">
      <h2>Overview</h2>
      <p class="section-content">{study.description}</p>
    </div>

    <div class="section">
      <h2>The Challenge</h2>
      <p class="section-content">{study.challenge}</p>
    </div>

    <div class="section">
      <h2>Our Solution</h2>
      <p class="section-content">{study.solution}</p>
    </div>

    <div class="section">
      <h2>Impact</h2>
      <div class="impact-list">
        {study.impact.map((item) => (
          <div class="impact-item">{item}</div>
        ))}
      </div>
    </div>

    <div class="section">
      <h2>What They Say</h2>
      <div class="testimonial">
        <p class="quote">{study.testimonial.quote}</p>
        <div class="author">{study.testimonial.author}</div>
        <div class="position">{study.testimonial.position}</div>
      </div>
    </div>

    <div class="cta">
      <h2>Ready to Achieve Similar Results?</h2>
      <p>Join {study.company} and other successful companies transforming their business with analytics.</p>
      <a href="/contact" class="cta-button">Get Started Today</a>
    </div>
  </div>
</Layout>
